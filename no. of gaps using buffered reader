 import java.util.*;
class gaps
{
public static void main(String args[])
{
Scanner s=new Scanner(System.in);
System.out.println("enter a sequence with gaps");
String sq=s.nextLine();
int a=sq.length(),count=0;
System.out.println("the length of the sequence is"+a);
System.out.println("the gaps are present in the following poitions");
for(int i=0;i<a;i++)
{
int y=sq.indexOf('-',i);
if(sq.charAt(i)=='-')
{
System.out.println("\t position "+(y+1));
count++;
}
}System.out.println("total no of gaps are"+count);
}
}
